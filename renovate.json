{
  "extends": [
    "github>entur/ror-renovate-config"
  ],
  "baseBranch": "main",
  "minor": {
    "automerge": false
  },
  "separateMinorPatch": true,
  "packageRules": [
    {
      "description": "Automerge only stable releases",
      "matchDatasources": [
        "maven"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchCurrentVersion": ">=1.0.0",
      "automerge": true
    },
    {
      "description": "Automerge Maven test dependencies",
      "matchDatasources": [
        "maven"
      ],
      "matchDepTypes": [
        "test"
      ],
      "automerge": true
    },
    {
      "description": "Do not automerge Logback minor releases (not SemVer compliant: version 1.2 is compatible with SLF4J 1 and version 1.3+ is compatible with SLF4J 2)",
      "matchPackageNames": [
        "org.apache.camel.springboot:camel-spring-boot-bom"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "automerge": false,
      "separateMinorPatch": true
    }
  ]
}
